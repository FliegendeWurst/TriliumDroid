<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- derived from https://github.com/SimpleMobileTools/Simple-Commons -->

    <style name="SettingsSectionLabelStyle" parent="@style/MaterialSectionLabelStyle">
        <item name="android:layout_marginStart">@dimen/settings_label_start_margin</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="MaterialSectionLabelStyle">
        <item name="android:layout_marginStart">@dimen/label_start_margin</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SettingsTextLabelStyle">
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="SettingsHolderTextViewStyle">
        <item name="android:paddingStart">@dimen/settings_label_start_margin</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingEnd">@dimen/settings_label_start_margin</item>
        <item name="android:paddingBottom">@dimen/activity_margin</item>
    </style>

    <style name="SettingsHolderTextViewOneLinerStyle" parent="@style/SettingsHolderTextViewStyle">
        <item name="android:paddingTop">@dimen/normal_margin</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
        <item name="android:paddingEnd">@dimen/settings_label_start_margin</item>
        <item name="android:paddingStart">@dimen/settings_label_start_margin</item>
    </style>

    <!-- end derived from https://github.com/SimpleMobileTools/Simple-Commons -->

    <style name="Widget">
        <item name="android:layout_margin">@dimen/smaller_margin</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="WidgetInner">
        <item name="android:padding">@dimen/smaller_margin</item>
        <item name="android:layout_margin">@dimen/smaller_margin</item>
        <item name="android:elevation">@dimen/medium_margin</item>
        <item name="android:background">@color/background2</item>
    </style>

    <style name="WidgetTableHeader">
        <item name="android:textSize">@dimen/bigger_text_size</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="WidgetTableText">
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="WidgetTableHeaderDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/smaller_margin</item>
        <item name="android:layout_marginBottom">@dimen/smaller_margin</item>
    </style>

    <style name="WidgetTableRowLabel">
        <item name="android:paddingRight">@dimen/bigger_margin</item>
    </style>

    <style name="Widget.TriliumDroid.AppWidget.Container" parent="android:Widget"></style>

    <style name="Widget.TriliumDroid.AppWidget.InnerView" parent="android:Widget"></style>
</resources>
