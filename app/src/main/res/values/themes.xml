<resources>
    <style name="Theme.TriliumDroid" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_light</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/Theme.TriliumDroid.AppBarOverlay</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:textColor">@color/foreground</item>
        <item name="android:textColorTertiary">@color/foreground</item>
    </style>

    <style name="Theme.TriliumDroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>
</resources>